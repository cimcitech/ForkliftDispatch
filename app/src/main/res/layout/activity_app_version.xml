<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.cimcitech.forkliftdispatch.AppVersionActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53.0dip"
        android:background="#000000"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="65.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/zbtn_titlebar_default_selector"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@mipmap/back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/relsase_title_name_new"
            style="@style/style_title"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="版本信息"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/title_search_ib"
            android:layout_width="65.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/zbtn_titlebar_default_selector"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@mipmap/back"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:padding="10dip"
        android:text="当前板门信息为：V 1.0"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/check_update"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="10dip"
        android:background="@mipmap/login_button_bg"
        android:text="检查更新" />
</LinearLayout>
