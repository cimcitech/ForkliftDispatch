<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53.0dip"
        android:background="#000000"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="65.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/zbtn_titlebar_default_selector"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@mipmap/back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/relsase_title_name_new"
            style="@style/style_title"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="设置请求频率"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/title_search_ib"
            android:layout_width="65.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/zbtn_titlebar_default_selector"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@mipmap/back"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_view_1"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dip"
            android:gravity="center"
            android:text="5秒"
            android:textColor="#B4B4B4"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView2"
            android:background="#262626" />

        <ImageView
            android:id="@+id/image_view_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:src="@mipmap/multi_select_flag" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_view_2"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dip"
            android:gravity="center"
            android:text="10秒"
            android:textColor="#B4B4B4"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView2"
            android:background="#262626" />

        <ImageView
            android:id="@+id/image_view_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:src="@mipmap/multi_select_flag"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_view_3"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dip"
            android:gravity="center"
            android:text="30秒"
            android:textColor="#B4B4B4"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView2"
            android:background="#262626" />

        <ImageView
            android:id="@+id/image_view_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:src="@mipmap/multi_select_flag"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_view_4"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dip"
            android:gravity="center"
            android:text="1分钟"
            android:textColor="#B4B4B4"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView2"
            android:background="#262626" />

        <ImageView
            android:id="@+id/image_view_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:src="@mipmap/multi_select_flag"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
