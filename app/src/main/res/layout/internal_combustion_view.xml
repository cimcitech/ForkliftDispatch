<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip">

        <ImageView
            android:id="@+id/icv_image_view_1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_1_selected" />

        <ImageView
            android:id="@+id/icv_image_view_2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_2_selected" />

        <ImageView
            android:id="@+id/icv_image_view_3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_3_selected" />

        <ImageView
            android:id="@+id/icv_image_view_4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_4_selected" />

        <ImageView
            android:id="@+id/icv_image_view_5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_5_selected" />

        <ImageView
            android:id="@+id/icv_image_view_6"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_6_selected" />

        <ImageView
            android:id="@+id/icv_image_view_7"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_7_selected" />

        <ImageView
            android:id="@+id/icv_image_view_8"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_8_selected" />

        <ImageView
            android:id="@+id/icv_image_view_9"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_9_selected" />

        <ImageView
            android:id="@+id/icv_image_view_10"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dip"
            android:src="@mipmap/icv_image_view_10_selected" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#262626"
        android:padding="10dip" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:background="@mipmap/icv_dashboard_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/work_hours_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1234"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="22dip">

            <TextView
                android:id="@+id/water_temperature_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="10dip"
                android:text="12"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/oil_volume_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="25dip"
                android:text="12"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <com.cimcitech.forkliftdispatch.widget.MyGridView
        android:id="@+id/icv_carGrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:cacheColorHint="#00000000"
        android:columnWidth="50dip"
        android:numColumns="2" />

</LinearLayout>
