<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/alpha"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/menu_bottom"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@id/main_usermain_menu"
            android:layout_width="fill_parent"
            android:layout_height="56.0dip"
            android:background="#000000"
            android:gravity="bottom"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0.0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/menu_layout_1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/setting_selector"
                    android:gravity="center"
                    android:minWidth="56.0dip"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@id/menu_1"
                        android:layout_width="24.0dip"
                        android:layout_height="24.0dip"
                        android:layout_marginBottom="2.0dip"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/main_button_chekuang" />

                    <TextView
                        android:id="@id/view_1"
                        style="@style/main_btn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="车况"
                        android:textSize="12.0sp" />
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0.0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/menu_layout_4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/setting_selector"
                    android:gravity="center"
                    android:minWidth="56.0dip"
                    android:orientation="vertical"
                    android:padding="0.0dip">

                    <ImageView
                        android:id="@id/menu_4"
                        android:layout_width="24.0dip"
                        android:layout_height="24.0dip"
                        android:layout_marginBottom="2.0dip"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/main_button_renwu" />

                    <TextView
                        android:id="@id/view_4"
                        style="@style/main_btn_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="任务"
                        android:textSize="12.0sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/num_icon"
                    android:layout_width="25dip"
                    android:visibility="gone"
                    android:layout_height="25dip"
                    android:layout_alignRight="@+id/menu_layout_4"
                    android:background="@mipmap/num_icon"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/menu_layout_5"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/setting_selector"
                        android:gravity="center"
                        android:minWidth="56.0dip"
                        android:orientation="vertical"
                        android:padding="0.0dip">

                        <ImageView
                            android:id="@id/menu_5"
                            android:layout_width="24.0dip"
                            android:layout_height="24.0dip"
                            android:layout_marginBottom="2.0dip"
                            android:layout_marginTop="5.0dip"
                            android:background="@drawable/main_button_setting" />

                        <TextView
                            android:id="@id/view_5"
                            style="@style/main_btn_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="设置"
                            android:textSize="12.0sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu_bottom"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical" />

</RelativeLayout>
